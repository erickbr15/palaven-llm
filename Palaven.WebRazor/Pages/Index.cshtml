@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>Graph API result</div>
<div>@ViewData["GraphApiResult"]</div>

<h2>Upload PDF document related to Mexican tax law</h2>

<form enctype="multipart/form-data" method="post">
    <dl>
        <dt>
            <label asp-for="InputModel.Law"></label>
        </dt>
        <dd>
            <input asp-for="InputModel.Law" type="text" />
            <span asp-validation-for="InputModel.Law"></span>
        </dd>
        <dt>
            <label asp-for="InputModel.Acronym"></label>
        </dt>
        <dd>
            <input asp-for="InputModel.Acronym" type="text" />
            <span asp-validation-for="InputModel.Acronym"></span>
        </dd>
        <dt>
            <label asp-for="InputModel.Year"></label>
        </dt>
        <dd>
            <input asp-for="InputModel.Year" type="text" />
            <span asp-validation-for="InputModel.Year"></span>
        </dd>
        <dt>
            <label asp-for="InputModel.FormFile"></label>
        </dt>
        <dd>
            <input asp-for="InputModel.FormFile" type="file" />
            <span asp-validation-for="InputModel.FormFile"></span>
        </dd>
    </dl>
    <input asp-page-handler="Upload" class="btn" type="submit" value="Upload" />
</form>

<p class="result">
    @Model.Result
</p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
